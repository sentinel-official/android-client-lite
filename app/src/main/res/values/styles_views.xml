<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Text Theme -->
    <style name="CustomTextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/opensansregular</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Toolbar Themes -->
    <style name="CustomTextAppearance.Toolbar">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/margin_18</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Text Themes -->
    <style name="CustomTextAppearance.AppTitle">
        <item name="android:textSize">@dimen/text_32</item>
    </style>

    <style name="CustomTextAppearance.Text12">
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="CustomTextAppearance.Text14">
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="CustomTextAppearance.Text16">
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="CustomTextAppearance.Text18">
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="CustomTextAppearance.Text20">
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <style name="CustomTextAppearance.Text24">
        <item name="android:textSize">@dimen/text_24</item>
    </style>

    <style name="CustomTextAppearance.Text12.Gray">
        <item name="android:textColor">@color/colorTextGray</item>
    </style>

    <style name="CustomTextAppearance.Text12.GrayNormal">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextAppearance.Text12.WhiteNormal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextAppearance.Text14.GrayNormal">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextAppearance.Text14.WhiteNormal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextAppearance.Text14.White70Normal">
        <item name="android:textColor">@color/colorTextWhiteWithAlpha70</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="CustomTextAppearance.Text14.InfoWhiteNormal">
        <item name="android:textColor">@color/colorTextInfoWhite</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextAppearance.Text16.WhiteNormal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextAppearance.Text16.Gray">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="CustomTextAppearance.Text18.InfoWhite">
        <item name="android:textColor">@color/colorTextInfoWhite</item>
    </style>

    <!-- Navigation Drawer Item Theme -->

    <!-- TextInputLayout And TextInputEditText Theme -->

    <!-- EditText Themes -->

    <!-- Button Themes -->
    <style name="CustomTextAppearance.OrangeButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/selector_button_text_dark_blue</item>
        <item name="android:paddingEnd">@dimen/margin_16</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:background">@drawable/shape_button_orange</item>
    </style>

    <style name="CustomTextAppearance.BlueButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/selector_button_text_white</item>
        <item name="android:paddingEnd">@dimen/margin_16</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:background">@drawable/shape_button_blue</item>
    </style>

    <style name="CustomTextAppearance.Disconnect">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/selector_button_text_white</item>
        <item name="android:paddingEnd">@dimen/margin_16</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:background">@drawable/shape_button_disconnect</item>
    </style>

    <style name="CustomTextAppearance.BlackButton">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:minHeight">@dimen/margin_48</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingEnd">@dimen/margin_16</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:textColor">@color/colorButtonOrange</item>
        <item name="android:background">@drawable/shape_button_black</item>
    </style>

    <style name="CustomTextAppearance.TransparentOrangeButton">
        <item name="android:textColor">@color/colorButtonOrange</item>
        <item name="android:paddingEnd">@dimen/margin_16</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- RadioButton Theme -->

    <!-- RatingBar Theme -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/colorButtonOrange</item>
    </style>
</resources>